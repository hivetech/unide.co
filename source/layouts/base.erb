<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title><%= data.project.title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Show full screen on bookmarked iOS devices -->
    <meta name="apple-mobile-web-app-capable" content="yes">

    <meta name="description" content="<%= data.project.description %>">
    <meta name="keywords" content="<%= data.project.keywords %>">
    <meta name="author" content="<%= data.project.author %>">

    <link rel="shortcut icon" href="images/favicon.ico">

    <link rel="stylesheet" href="stylesheets/flat-ui/bootstrap/bootstrap.css">
    <link rel="stylesheet" href="stylesheets/flat-ui/bootstrap/bootstrap-responsive.css">
    <link rel="stylesheet" href="stylesheets/flat-ui/flat-ui.css">

    <!-- Using only with Flat-UI (free)-->
    <link rel="stylesheet" href="stylesheets/icon-font.css">
    <!-- end -->

    <link rel="stylesheet" href="stylesheets/style.css">

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="javascripts/flat-ui/html5shiv.js"></script>
    <![endif]-->
  </head>

  <body background="images/<%= data.design.background %>">
    <%= yield %>
    <%= partial "footer" %>

    <!-- Placed at the end of the document so the pages load faster -->
    <script src="javascripts/jquery-2.1.0.min.js"></script>
    <script src="javascripts/flat-ui/bootstrap.min.js"></script>
    <!--[if lt IE 8]>
    <script src="javascripts/flat-ui/icon-font-ie7.js"></script>
    <![endif]-->
  </body>
</html>
